@model List<_01_LampshadeQuery.Contracts.ProductCategory.ProductCategoryQueryModel>

<!-- Products by Category Section -->
<section class="py-12 lg:py-16 bg-surface-dark/50">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-10">
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-3">محصولات ما</h2>
            <p class="text-text-secondary max-w-2xl mx-auto">
                محصولات را بر اساس دسته‌بندی مشاهده کنید
            </p>
        </div>
        
        <!-- Category Tabs -->
        <div class="flex flex-wrap justify-center gap-2 mb-8">
            @{ var firstCategory = Model.FirstOrDefault(); }
            @foreach (var category in Model)
            {
                <button class="category-tab px-6 py-2.5 rounded-lg text-sm font-medium transition-all @(category == firstCategory ? "bg-primary text-white" : "bg-surface-dark text-text-secondary hover:text-white border border-border-dark")"
                        data-category="@category.Id">
                    @category.Name
                </button>
            }
        </div>
        
        <!-- Products Container -->
        @foreach (var category in Model)
        {
            <div class="category-products @(category == firstCategory ? "" : "hidden")" data-category="@category.Id">
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    @if (category.Products != null)
                    {
                        @foreach (var product in category.Products.Take(8))
                        {
                            <partial name="_ProductCard" model="product" />
                        }
                    }
                </div>
                
                <!-- View All in Category -->
                <div class="text-center mt-8">
                    <a asp-page="/ProductCategory" asp-route-id="@category.Slug" 
                       class="inline-flex items-center gap-2 text-primary hover:text-white font-medium transition-colors">
                        مشاهده همه محصولات @category.Name
                        <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                    </a>
                </div>
            </div>
        }
    </div>
</section>

<!-- Tab Switching Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('.category-tab');
        const productContainers = document.querySelectorAll('.category-products');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                const categoryId = this.dataset.category;
                
                // Update tab styles
                tabs.forEach(t => {
                    t.classList.remove('bg-primary', 'text-white');
                    t.classList.add('bg-surface-dark', 'text-text-secondary', 'border', 'border-border-dark');
                });
                this.classList.remove('bg-surface-dark', 'text-text-secondary', 'border', 'border-border-dark');
                this.classList.add('bg-primary', 'text-white');
                
                // Show/hide product containers
                productContainers.forEach(container => {
                    if (container.dataset.category === categoryId) {
                        container.classList.remove('hidden');
                    } else {
                        container.classList.add('hidden');
                    }
                });
            });
        });
    });
</script>

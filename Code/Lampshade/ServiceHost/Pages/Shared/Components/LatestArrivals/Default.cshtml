@model List<_01_LampshadeQuery.Contracts.Product.ProductQueryModel>

<!-- Latest Products Section -->
<section class="py-12 lg:py-16">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-10">
            <h2 class="text-2xl sm:text-3xl font-bold text-white mb-3">آخرین محصولات</h2>
            <p class="text-text-secondary max-w-2xl mx-auto">
                جدیدترین محصولات اضافه شده به فروشگاه را مشاهده کنید
            </p>
        </div>
        
        <!-- Products Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            @foreach (var product in Model.Take(8))
            {
                <partial name="_ProductCard" model="product" />
            }
        </div>
        
        <!-- View All Button -->
        @if (Model.Count > 8)
        {
            <div class="text-center mt-10">
                <a href="/ProductCategory" class="inline-flex items-center gap-2 bg-surface-dark hover:bg-[#223649] text-white font-bold px-8 py-3 rounded-lg border border-border-dark transition-colors">
                    مشاهده همه محصولات
                    <span class="material-symbols-outlined text-[20px]">arrow_back</span>
                </a>
            </div>
        }
    </div>
</section>

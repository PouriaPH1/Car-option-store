@page
@model IndexModel
@{
    ViewData["Title"] = "فروشگاه آپشن خودرو";
}

<!-- Hero Slider -->
@await Component.InvokeAsync("Slide")

<!-- Product Categories -->
@await Component.InvokeAsync("ProductCategory")

<!-- Products by Category (Tabs) -->
@await Component.InvokeAsync("ProductCategoryWithProduct")

<!-- Latest Products -->
@await Component.InvokeAsync("LatestArrivals")

<!-- Promotional Banners Section -->
<section class="py-12 lg:py-16">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Banner 1 -->
            <div class="group relative rounded-xl overflow-hidden h-64 cursor-pointer">
                <div class="absolute inset-0 bg-gradient-to-l from-background-dark/95 via-background-dark/60 to-transparent z-10"></div>
                <div class="absolute inset-0 bg-surface-dark">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23314d68\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
                </div>
                <div class="relative z-20 h-full flex items-center p-8">
                    <div class="flex-1">
                        <span class="inline-block bg-red-600 text-white text-xs font-bold px-3 py-1 rounded mb-3">
                            پیشنهاد ویژه
                        </span>
                        <h3 class="text-2xl font-bold text-white mb-2">مانیتورهای اندروید</h3>
                        <p class="text-text-secondary mb-4">تا ۳۰٪ تخفیف ویژه</p>
                        <a href="/ProductCategory/monitors" class="inline-flex items-center gap-2 bg-primary hover:bg-blue-600 text-white text-sm font-bold px-5 py-2.5 rounded-lg transition-colors">
                            مشاهده محصولات
                            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                        </a>
                    </div>
                    <div class="hidden sm:flex items-center justify-center">
                        <div class="size-32 bg-primary/20 rounded-full flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-[64px]">tv</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Banner 2 -->
            <div class="group relative rounded-xl overflow-hidden h-64 cursor-pointer">
                <div class="absolute inset-0 bg-gradient-to-l from-background-dark/95 via-background-dark/60 to-transparent z-10"></div>
                <div class="absolute inset-0 bg-surface-dark">
                    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23314d68\" fill-opacity=\"0.1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
                </div>
                <div class="relative z-20 h-full flex items-center p-8">
                    <div class="flex-1">
                        <span class="inline-block bg-blue-600 text-white text-xs font-bold px-3 py-1 rounded mb-3">
                            جدید
                        </span>
                        <h3 class="text-2xl font-bold text-white mb-2">دوربین‌های دنده عقب</h3>
                        <p class="text-text-secondary mb-4">کیفیت HD با دید در شب</p>
                        <a href="/ProductCategory/cameras" class="inline-flex items-center gap-2 bg-primary hover:bg-blue-600 text-white text-sm font-bold px-5 py-2.5 rounded-lg transition-colors">
                            مشاهده محصولات
                            <span class="material-symbols-outlined text-[18px]">arrow_back</span>
                        </a>
                    </div>
                    <div class="hidden sm:flex items-center justify-center">
                        <div class="size-32 bg-primary/20 rounded-full flex items-center justify-center">
                            <span class="material-symbols-outlined text-primary text-[64px]">videocam</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-12 lg:py-16 border-t border-border-dark">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Feature 1: Free Shipping -->
            <div class="flex items-center gap-4 p-4 bg-surface-dark rounded-xl border border-border-dark">
                <div class="size-14 bg-primary/20 rounded-lg flex items-center justify-center text-primary shrink-0">
                    <span class="material-symbols-outlined text-[28px]">local_shipping</span>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-1">ارسال رایگان</h4>
                    <p class="text-text-secondary text-sm">برای خریدهای بالای ۲ میلیون</p>
                </div>
            </div>
            
            <!-- Feature 2: Guarantee -->
            <div class="flex items-center gap-4 p-4 bg-surface-dark rounded-xl border border-border-dark">
                <div class="size-14 bg-primary/20 rounded-lg flex items-center justify-center text-primary shrink-0">
                    <span class="material-symbols-outlined text-[28px]">verified</span>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-1">ضمانت اصالت</h4>
                    <p class="text-text-secondary text-sm">تضمین کیفیت محصولات</p>
                </div>
            </div>
            
            <!-- Feature 3: Support -->
            <div class="flex items-center gap-4 p-4 bg-surface-dark rounded-xl border border-border-dark">
                <div class="size-14 bg-primary/20 rounded-lg flex items-center justify-center text-primary shrink-0">
                    <span class="material-symbols-outlined text-[28px]">support_agent</span>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-1">پشتیبانی ۲۴/۷</h4>
                    <p class="text-text-secondary text-sm">پاسخگویی در هر ساعت</p>
                </div>
            </div>
            
            <!-- Feature 4: Return -->
            <div class="flex items-center gap-4 p-4 bg-surface-dark rounded-xl border border-border-dark">
                <div class="size-14 bg-primary/20 rounded-lg flex items-center justify-center text-primary shrink-0">
                    <span class="material-symbols-outlined text-[28px]">autorenew</span>
                </div>
                <div>
                    <h4 class="text-white font-bold mb-1">بازگشت کالا</h4>
                    <p class="text-text-secondary text-sm">۷ روز ضمانت بازگشت</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Latest Articles -->
@await Component.InvokeAsync("LatestArticles")

<!-- Newsletter Section -->
<section class="py-12 lg:py-16 bg-surface-dark border-t border-border-dark">
    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto text-center">
            <div class="size-16 bg-primary/20 rounded-full flex items-center justify-center text-primary mx-auto mb-6">
                <span class="material-symbols-outlined text-[32px]">mail</span>
            </div>
            <h3 class="text-2xl font-bold text-white mb-3">عضویت در خبرنامه</h3>
            <p class="text-text-secondary mb-6">
                برای اطلاع از جدیدترین محصولات و تخفیف‌های ویژه، در خبرنامه ما عضو شوید
            </p>
            <form class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
                <input type="email" 
                       placeholder="ایمیل خود را وارد کنید..." 
                       class="flex-1 h-12 bg-background-dark border border-border-dark rounded-lg px-4 text-white placeholder:text-text-secondary focus:ring-2 focus:ring-primary focus:border-transparent" />
                <button type="submit" 
                        class="h-12 px-6 bg-primary hover:bg-blue-600 text-white font-bold rounded-lg transition-colors whitespace-nowrap">
                    عضویت
                </button>
            </form>
        </div>
    </div>
</section>
